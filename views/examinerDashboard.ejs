<h2><marquee width="100%" direction="right" height="30px">Welcome <%= user.name %></h2>  </marquee>

<div class="both-rows">
    
        
      
  <div class="column left-side" style="background-color:rgb(247, 242, 242);">
   
        
        <div class="form-group mb-2">
          <div class="text-center">
              <input type="button" class="btn btn-primary setAlgorithmBtn" id="setAlgorithmBtn" value="Set Algorithm">
          </div>
      </div>
      <div class="form-group mb-2">
        <div class="text-center">
            <input type="button" class="btn btn-primary setExamBtn" id="setExamBtn" value="Set Exam">
        </div>
    </div>
    <div class="form-group mb-2">
      <div class="text-center">
          <input type="button" class="btn btn-primary markExamBtn" id="markExamBtn" value="Mark Exam">
      </div>
  </div>
  <div class="form-group mb-2">
    <div class="text-center">
        <input type="button" class="btn btn-primary viewResultBtn" id="viewResultBtn" value="View Result">
    </div>
</div>
  </div>
  <div class="column right-side" style="background-color:#Cfbfbf;">
    
    

    <div class=" main-box setAlgorithmPage seen">
      <div class="col text-center py-3">
          <h1>Set Algorithm</h1>
      </div>
      <div class="">
          <div class="">
              <form class="form_container" method="post" action="/users/setAlgorithm"
                  enctype="application/x-www-form-urlencoded">
                  <div class="form-group mb-1">
                      <label for="name" class="form-label"></label>
                      <div class="">
                          <input type="name" class="form-control" id="ExamName" placeholder="Exam Name"
                              name="examName">
                      </div>
                  </div>
                  <div class="form-group mb-1">
                      <label for="week" class="form-label"></label>
                      <div class="">
                          <input type="name" class="form-control" id="week" placeholder="Week"
                              name="week">
                      </div>
                  </div>
                  <div class="form-group mb-1 test">
                      <label for="testcase<%= count %>" class="form-label"></label>
                      <div class="">
                          <input type="text" class="form-control" id="testCase" placeholder="Test Case <%= count %>"
                              name="testcase<%= count %>">
                      </div>
                      <label for="result<%= count %>" class="form-label"></label>
                      <div class="">
                          <input type="text" class="form-control" id="resultOne" placeholder="Result<%= count %>"
                              name="result<%= count %>">
                      </div>
                  </div>
                  <div class="form-group mb-2">
                      <div class="text-center">
                          <input type="button" class="btn btn-primary addTestcaseBtn" id="addTestcaseBtn" value="Add Test">
                      </div>
                  </div>
                  <div class="form-group mb-1 testcase">
                      <label for="testcaseType" class="form-label"></label>
                      <div class="">
                          <input type="text" class="form-control" id="testcaseType" placeholder="Test Case Type"
                              name="testcaseType">
                      </div>
                  </div>
                  <div class="form-group mb-1 result">
                      <label for="resultType" class="form-label"></label>
                      <div class="">
                          <input type="text" class="form-control" id="resultType" placeholder="ResultType"
                              name="resultType">
                      </div>
                  </div>
                  <div class="form-group mb-1">
                      <label for="count" class="form-label"></label>
                      <div class="">
                          <input type="text" class="form-control count" id="count" placeholder="Number of Test Case"
                              name="count" >
                      </div>
                  </div>
                  
                  <div class="form-group mb-5">
                      <label for="notes" class="form-label"></label>
                      <div class="">
                          <textarea type="text" class="form-control" id="instruction" placeholder="Examination Instruction"
                              name="instruction"></textarea>
                      </div>
                  </div>
                  <div class="form-group mb-3">
                      <div class="text-center">
                          <input type="submit" class="btn btn-primary" id="submit" value="Set Algorithm">
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>

   
<div class="container-fluid main-box setExamPage seen">
            <div class="col text-center py-3">
                <h1>Set Exam </h1>
            </div>
            <div class="">
                <div class="">
                    <form class="form_container" method="post" action="/users/setExam"
                        enctype="application/x-www-form-urlencoded">
                        <div class="form-group mb-1">
                            <label for="name" class="form-label"></label>
                            <div class="">
                                <input type="name" class="form-control" id="ExamName" placeholder="Exam Name"
                                    name="examName">
                            </div>
                        </div>
                        <div class="form-group mb-1">
                            <label for="week" class="form-label"></label>
                            <div class="">
                                <input type="name" class="form-control" id="week" placeholder="Week"
                                    name="week">
                            </div>
                        </div>
                        <div class="form-group mb-5">
                            <label for="notes" class="form-label"></label>
                            <div class="">
                                <textarea type="text" class="form-control" id="instruction" placeholder="Examination Instruction"
                                    name="instruction"></textarea>
                            </div>
                        </div>
                        <div class="form-group mb-1">
                            <label for="noOfQuestion" class="form-label"></label>
                            <div class="">
                                <input type="text" class="form-control" id="numberOfQuestion" placeholder="Number of Question"
                                    name="count">
                            </div>
                        </div>
                        <div class="form-group mb-1 questionNode">
                            <label for="question1" class="form-label"></label>
                            <div class="">
                                <input type="text" class="form-control" id="question1" placeholder="Question One"
                                    name="question1">
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <div class="text-center">
                                <input type="button" class="btn btn-primary addQuestionBtn" id="addQuestionBtn" value="Add Question">
                            </div>
                        </div>
                
                        <div class="form-group mb-3">
                            <div class="text-center">
                                <input type="submit" class="btn btn-primary" id="submit" value="Set Examination">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="container-fluid main-box markExamPage seen">
          <div class="col text-center py-3">
            <h1>MARK EXAM</h1>
          </div>
          <div class="">
            <div class="">
              <form class="form_container" method="post" action="/users/markExam" enctype="application/x-www-form-urlencoded">
               
                <div class="form-group mb-1">
                  <label for="colFormLabel" class="form-label"></label>
                  <div class="">
                    <input type="text" class="form-control" id="colFormLabel" placeholder="Examination ID" name="examId">
                  </div>
                </div>
                <div class="form-group mb-3">
                  <div class="text-center">
                    <input type="submit" class="btn btn-primary" id="Create" value="Search" >
                  </div>
                </div>
              </form>
            </div>
          </div>
      </div>

      <div class="container-fluid main-box viewResultPage seen">
          <div class="col text-center py-3">
            <h1>VIEW RESULT</h1>
          </div>
          <div class="">
            <div class="">
              <form class="form_container" method="post" action="/users/viewResult" enctype="application/x-www-form-urlencoded">
               
                <div class="form-group mb-1">
                  <label for="colFormLabel" class="form-label"></label>
                  <div class="">
                    <input type="text" class="form-control" id="colFormLabel" placeholder="Examination ID" name="examId">
                  </div>
                </div>
                <div class="form-group mb-3">
                  <div class="text-center">
                    <input type="submit" class="btn btn-primary" id="Create" value="Search" >
                  </div>
                </div>
              </form>
            </div>
          </div>
      </div>




  </div>
</div>
  
<%- include('./examinerDashboardJS.ejs') %> 
<%- include('./footer.ejs') %>
</body>

</html>